<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="service.3denabler.lgtv"
    name="3D Enabler LG TV"
    version="1.0.0"
    provider-name="Dennis Koot">
  <requires>
    <import addon="xbmc.python"              version="2.14.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.service"       library="service.py" start="login"/>
  <extension point="xbmc.python.script" library="script.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language/>
    <summary lang="en">Switch LG TV into 3D mode when playing 3D movie</summary>
    <description lang="en">Once you start your 3D movie - your LG 3DTV that is connected to your Serial-Port should switch to respective 3D mode automatically</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
    <forum>http://forum.xbmc.org/showthread.php?tid=185212</forum>
    <source>https://github.com/koter84/service.3denabler.lgtv</source>
  </extension>
</addon>
